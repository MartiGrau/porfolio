---
import LinkInline from "./LinkInline.astro"
import TechTag from "./TechTag.astro"

interface Tag {
  text: string
  iconName?: string
  color?: string
}

interface Props {
  title: string
  company: string
  description: string
  link?: string
  date: string
  tags?: (string | Tag)[]
}

const { title, company, description, link, date, tags = [] } = Astro.props
---

<div
  class="relative mx-12 pb-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4]"
>
  <div class="relative pb-12 md:col-span-2">
    <div class="sticky top-0">
      <div
        class="absolute -left-[34px] top-2 size-3 -translate-x-1/2 rounded-full bg-yellow-400 shadow-sm"
      ></div>

      <h3 class="text-xl font-bold text-yellow-400">{title}</h3>
      <h4 class="font-semibold text-xl text-gray-600 dark:text-white">{company}</h4>
      <time class="p-0 m-0 text-sm text-gray-600/80 dark:text-white/80">{date}</time>
      
      {tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mt-3">
          {tags.map((tag) => {
            const tagText = typeof tag === 'string' ? tag : tag.text
            const tagIconName = typeof tag === 'string' ? undefined : tag.iconName
            const tagColor = typeof tag === 'string' ? undefined : tag.color
            return (
              <TechTag text={tagText} iconName={tagIconName} color={tagColor} />
            )
          })}
        </div>
      )}
    </div>
  </div>
  <div
    class="relative flex flex-col gap-2 pb-4 text-gray-600 dark:text-gray-300 md:col-span-3 dark:[&_strong]:text-yellow-200 [&_strong]:text-yellow-500 [&_strong]:font-semibold"
  >
    <div set:html={description} />
    {
      link && (
        <LinkInline href={link}>
          View details{" "}
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 icon icon-tabler icon-tabler-chevron-right"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <>
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path d="M9 6l6 6l-6 6" />
            </>
          </svg>
        </LinkInline>
      )
    }
  </div>
</div>
